<div data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true" itemscope itemtype="http://schema.org/Product">

  {%- assign current_variant = product.selected_or_first_available_variant -%}
  {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}

<div class="product-container">


<div class="row">
  <div class="col medium-up--one-quarter">
    <div class="scroll-container">
      <div class="fixed-content">
        <div class="rte">
            <h3 class="title">{{ product.title }}</h3>
          {{ product.description }}
        </div>
      </div>
    </div>

  </div>
  <div class="col medium-up--one-half">
    {% if product.images.size > 1 %}
    <div class="product-gallery-container">
      {% for image in product.images %}

            <img src="{{ image.src | img_url: '600x' }}" alt="{{ image.alt | escape }}">

      {% endfor %}
    </div>
    {% endif %}
  </div>
  <div class="col medium-up--one-quarter">

    <div class="scroll-container">
      <div class="fixed-content">

    <div data-price-wrapper class="mb2">
      <span data-product-price>
        {{ current_variant.price | money }}
      </span>

      {% if product.compare_at_price_max > product.price %}
        <span class="visually-hidden" data-compare-text>{{ 'products.product.regular_price' | t }}</span>
        <s data-compare-price>
          {% if current_variant.compare_at_price > current_variant.price %}
            {{ current_variant.compare_at_price | money }}
          {% endif %}
        </s>
      {% endif %}
    </div>

    <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
      <meta itemprop="priceCurrency" content="{{ shop.currency }}">
      <meta itemprop="price" content="{{ current_variant.price | divided_by: 100.00 }}">
      <link itemprop="availability" href="http://schema.org/{% if current_variant.available %}InStock{% else %}OutOfStock{% endif %}">

      <form action="/cart/add" method="post" enctype="multipart/form-data">
        {% unless product.has_only_default_variant %}

          {% for option in product.options_with_values %}

          {% comment %}
              Determine if it's a color option.
          {% endcomment %}
          {% assign is_color_option = false %}
          {% assign option_handle = option.name | handle %}

            {%- if option_handle contains "color" -%}
                  {% assign is_color_option = true %}
            {%- endif -%}

            {% if is_color_option %}
            <div class="button-group clearfix mb2">
              <span class="btn">{{ option.name }}</span>
              {% for value in option.values %}
              <span class="btn {% if option.selected_value == value %}selected{% endif %}">{{ value }}</span>
              {% endfor %}
            </div>

            {% endif %}

          {% endfor %}
        {% endunless %}

        <select name="id" class="no-js" data-product-select>
          {% for variant in product.variants %}
            <option
              {% if variant == current_variant %}selected="selected"{% endif %}
              {% unless variant.available %}disabled="disabled"{% endunless %}
              value="{{ variant.id }}">
                {{ variant.title }}
            </option>
          {% endfor %}
        </select>

        <input type="hidden" name="quantity" value="1" min="1" max="15">

        <div class="qty-selectors mb2">

            <span class="btn qty-selectors__btn  qty-selectors__btn--minus">&#150;</span>

            <div class="btn">quantity <span class="qty-selectors__qty">1</span></div>

            <span class="btn qty-selectors__btn  qty-selectors__btn--plus">&#43;</span>

        </div>


        {% for option in product.options_with_values %}

        {% comment %}
            Determine if it's a size option.
        {% endcomment %}
        {% assign is_size_option = false %}
        {% assign option_handle = option.name | handle %}

          {%- if option_handle contains "size" -%}
                {% assign is_size_option = true %}
          {%- endif -%}

          {% if is_size_option %}

                <div class="selector-wrapper js mb2">

                  <select
                    id="SingleOptionSelector-{{ forloop.index0 }}"
                    class="btn"
                    data-single-option-selector
                    data-index="option{{ option.position }}">
                    <option value="" disabled selected="selected">size</option>
                    {% for value in option.values %}
                      <option
                        value="{{ value | escape }}"
                        >
                          {{ value }}
                      </option>
                    {% endfor %}
                  </select>
                </div>


          {% endif %}

        {% endfor %}



        <button
          type="submit"
          name="add"
          class="btn btn--primary"
          data-add-to-cart
          {% unless current_variant.available %}disabled="disabled"{% endunless %}>
            <span data-add-to-cart-text>
              {% if current_variant.available %}
                {{ 'products.product.add_to_cart' | t }}
              {% else %}
                {{ 'products.product.sold_out' | t }}
              {% endif %}
            </span>
        </button>
      </form>

    </div>
    </div>

  </div>
<!-- form container end -->
  </div>

</div>

</div>


<div id="bottom-section" style="min-height: 1200px; background-color: #f0dfcf">
  {% section 'featured-images' %}

</div>


  {% unless product == empty %}
    <script type="application/json" data-product-json>
      {{ product | json }}
    </script>
  {% endunless %}
</div>
